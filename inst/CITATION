citHeader("To cite HMMoce in publications use:")

citEntry(entry = "Article",
         title        = "HMMoce: an R package for improved analysis of marine animal movement data using hidden Markov models",
         author       = personList(as.person("Camrin D Braun"),
                                   as.person("Benjamin Galuardi"),
                                   as.person("Simon R Thorrold")),
         journal      = "Methods in Ecology and Evolution",
         year         = "subm",
         volume       = "x",
         number       = "x",
         pages        = "x",
         url          = "x",
         
         textVersion  =
           paste("Braun CD, Galuardi B, Thorrold ST (submitted).",
                 "HMMoce: an R package for improved analysis of marine animal movement data using hidden Markov models",
                 "Methods in Ecology and Evolution, x(x), x-x.")
)
